# Database
MONGO_URI=mongodb://localhost:27017/taxwise
# For production: mongodb+srv://username:password@cluster.mongodb.net/taxwise

# Server
PORT=3001
NODE_ENV=development

# JWT Secret
JWT_SECRET=replace-me-with-strong-secret

# Aadhaar Security
AADHAAR_SALT=strong-random-salt-for-aadhaar-reference-hashing
BCRYPT_ROUNDS=12

# Password Management
REVEAL_PASSWORD_ON_REGISTRATION=true
ALLOW_PLAIN_RESET_PASSWORD_ON_DEV=true

# File Upload
MAX_FILE_SIZE=2097152
ALLOWED_FILE_TYPES_QR=image/png,image/jpeg,image/jpg
ALLOWED_FILE_TYPES_XML=application/xml,text/xml

# Rate Limiting
RATE_LIMIT_WINDOW_MS=86400000
RATE_LIMIT_MAX_REQUESTS=3
ENABLE_IP_GEO=false

# Security
ENABLE_RATE_LIMITING=true
MAX_LOGIN_ATTEMPTS=5